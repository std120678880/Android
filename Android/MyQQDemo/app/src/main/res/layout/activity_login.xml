<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecedf0">

    <ImageView
        android:id="@+id/login_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <LinearLayout
        android:id="@+id/login_scanf_linearlayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_Image"
        android:background="#ffffff">
        <EditText
            android:id="@+id/login_NumberEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:hint="QQ号/手机号/邮箱"
            android:textColorHint="#d9dadc"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d9dadc"/>

        <EditText
            android:id="@+id/login_passwordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:textColor="#000000"
            android:hint="密码"
            android:textColorHint="#d9dadc"/>
    </LinearLayout>

    <Button
        android:id="@+id/login_loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_scanf_linearlayout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:text="登录"
        android:background="@drawable/newuser_button_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/login_loginButton"
        android:layout_alignLeft="@id/login_loginButton"
        android:layout_alignRight="@id/login_loginButton"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/login_forgetPasswordText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="left"
            android:textSize="17sp"
            android:textColor="#3eadec"
            android:text="忘记密码?"
            android:clickable="true"/>
        <TextView
            android:id="@+id/login_newuserText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="right"
            android:textSize="17sp"
            android:textColor="#3eadec"
            android:text="新用户注册"
            android:clickable="true"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:id="@+id/login_servicecheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:gravity="right"/>
        <TextView
            android:id="@+id/login_serviceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/login_servicecheckBox"
            android:layout_alignTop="@id/login_servicecheckBox"
            android:gravity="center"
            android:layout_toRightOf="@id/login_servicecheckBox"
            android:textColor="#a2a3a5"
            android:textSize="15sp"
            android:text="我已阅读并同意"/>

        <TextView
            android:id="@+id/login_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/login_servicecheckBox"
            android:layout_alignTop="@id/login_servicecheckBox"
            android:gravity="center"
            android:layout_toRightOf="@id/login_serviceText"
            android:textColor="#3eadec"
            android:textSize="15sp"
            android:text="服务条款"
            android:clickable="true"/>
    </RelativeLayout>

</RelativeLayout>